{
  "name": "token-geyser",
  "version": "0.0.1",
  "description": "A smart-contract based mechanism to distribute tokens over time, inspired loosely by Compound and Uniswap.",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "solidity"
  ],
  "homepage": "https://github.com/ampleforth/continuous-vesting-distribution#readme",
  "bugs": {
    "url": "https://github.com/ampleforth/continuous-vesting-distribution/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ampleforth/continuous-vesting-distribution.git"
  },
  "license": "GPL-3.0",
  "author": "dev-support@ampleforth.org",
  "scripts": {
    "compile-contracts": "npx hardhat build",
    "lint": "npx eslint ./scripts ./test ./util *.js --cache --fix && npx solhint ./contracts/*.sol",
    "build": "npx hardhat compile",
    "test:staking": "npx hardhat test test/staking.js",
    "test:tokenpool": "npx hardhat test test/token_pool.js",
    "test:tokenunlock": "npx hardhat test test/token_unlock.js",
    "test:unstake": "npx hardhat test test/unstake.js",
    "test:coverage": "npx hardhat coverage --testfiles 'test/*.js'",
    "test": "npx hardhat test"
  },
  "pre-commit": {
    "run": [
      "lint"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.1.0",
    "app-root-path": "^3.0.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-environment": "^0.1.9",
    "@openzeppelin/test-helpers": "^0.5.11",
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.1",
    "bn-chai": "^1.0.1",
    "chai": "^4.3.4",
    "chalk": "^4.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.25.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-mocha": "0.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-spellcheck": "0.0.17",
    "eslint-plugin-standard": "^5.0.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "solhint": "^2.0.0",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "web3": "^1.3.5"
  }
}
