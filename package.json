{
  "name": "token-geyser",
  "version": "0.0.1",
  "description": "A smart-contract based mechanism to distribute tokens over time, inspired loosely by Compound and Uniswap.",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "solidity"
  ],
  "homepage": "https://github.com/ampleforth/continuous-vesting-distribution#readme",
  "bugs": {
    "url": "https://github.com/ampleforth/continuous-vesting-distribution/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ampleforth/continuous-vesting-distribution.git"
  },
  "license": "GPL-3.0",
  "author": "dev-support@ampleforth.org",
  "scripts": {
    "compile-contracts": "npx hardhat compile",
    "lint": "npx eslint ./scripts ./test ./util *.js --cache --fix && npx solhint ./contracts/*.sol",
    "deploy:rinkeby": "hardhat deploy-geyser --network rinkeby",
    "deploy:mainnet": "hardhat deploy-geyser --network mainnet",
    "deploy:rinkeby:verify": "npx hardhat verify --network rinkeby --constructor-args verifyArgs.js 0x83FB8FC24147e5cE7ab51f2eb796F6128765c0ff",
    "deploy:mainnet:verify": "npx hardhat verify --network mainnet --constructor-args verifyArgs.js 0x750BF5E51CbEF7911E0B8fd8a7479f986E3b2ef8",
    "deploy:mainnet:transfer-ownership": "npx hardhat transfer-to-multisig --network mainnet",
    "test": "npx hardhat test"
  },
  "pre-commit": {
    "run": [
      "lint"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.1.0",
    "app-root-path": "^3.0.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.1",
    "bn-chai": "^1.0.1",
    "chai": "^4.3.4",
    "dotenv": "^8.2.0",
    "eslint": "^7.25.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-mocha": "0.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha-only": "0.0.3",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-spellcheck": "0.0.17",
    "eslint-plugin-standard": "^5.0.0",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "solhint": "^2.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
